<div class="row">
	<div class="col-md-4">
		<%= image_tag @book.book_img.url(:book_show), class: "book_show" %>
	</div>
	
	<div class="col-md-8">
		<h1><%= @book.title %></h1>
		<h2><%= @book.author %></h2>
		<p><%= @book.description %></p>
	<div class="row">
		<div class="col-md-2">
			<p><%= @book.rating %></p>
		</div>

		<div class="col-md-6">
			<p><%= @book.verdict %></p>
		</div>
	</div>
	</div>
</div>

